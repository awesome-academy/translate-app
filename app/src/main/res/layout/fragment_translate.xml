<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">

        <Button
            android:id="@+id/btn_from"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_circle"
            android:singleLine="true"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintVertical_chainStyle="spread" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_compare_arrows"
            app:layout_constraintBottom_toBottomOf="@id/btn_from"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_to"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_circle"
            android:padding="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35"/>

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_border_blue"
            android:hint="@string/hint_input"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_from"
            app:layout_constraintDimensionRatio="H, 3:1"/>

        <ImageView
            android:id="@+id/input_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_speaker"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/input" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_copy"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@id/input_speaker"
            app:layout_constraintTop_toTopOf="@id/input" />

        <EditText
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_border_blue"
            android:enabled="false"
            android:hint="@string/hint_output"
            android:inputType="none"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input"
            app:layout_constraintDimensionRatio="H, 3:1"/>

        <ImageView
            android:id="@+id/output_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_speaker"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/output" />

        <ImageView
            android:id="@+id/copy_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_copy"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@id/output_speaker"
            app:layout_constraintTop_toTopOf="@id/output" />

        <Button
            android:id="@+id/translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:backgroundTint="@color/color_blue_236"
            android:text="@string/trans_but"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/output" />

        <FrameLayout
            android:id="@+id/sup_layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/output" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
