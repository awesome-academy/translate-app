<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_15">

    <Button
        android:id="@+id/btn_from"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:background="@drawable/bg_corner_circle"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn_from"
        android:src="@drawable/ic_compare_arrows"/>

    <Button
        android:id="@+id/btn_to"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.35"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black"
        android:background="@drawable/bg_corner_circle"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_from"
        android:inputType="textMultiLine"
        app:layout_constraintHeight_percent="0.2"
        android:background="@drawable/bg_border_blue"
        android:layout_marginTop="@dimen/dp_20"
        android:hint="@string/hint_input" />

    <ImageView
        android:id="@+id/input_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_speaker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/input"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/input_speaker"
        app:layout_constraintTop_toTopOf="@id/input"
        android:src="@drawable/ic_copy"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_4"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input"
        android:inputType="none"
        android:enabled="false"
        app:layout_constraintHeight_percent="0.2"
        android:background="@drawable/bg_border_blue"
        android:layout_marginTop="@dimen/dp_20"
        android:hint="@string/hint_output" />

    <ImageView
        android:id="@+id/output_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_speaker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/output"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/copy_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/output_speaker"
        app:layout_constraintTop_toTopOf="@id/output"
        android:src="@drawable/ic_copy"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_4"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/output"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/trans_but"
        android:textColor="@color/black"
        android:backgroundTint="@color/color_blue_236"/>

</androidx.constraintlayout.widget.ConstraintLayout>
