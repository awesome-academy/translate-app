<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        android:textSize="@dimen/sp_20"/>

    <TextView
        android:id="@+id/text_question"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintHeight_percent="0.25"
        android:gravity="center"
        android:background="@drawable/bg_corner_circle"
        android:backgroundTint="?attr/colorPrimary"
        android:textSize="@dimen/sp_16"/>

    <Button
        android:id="@+id/button_answer_a"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_question"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.1"
        android:background="@drawable/bg_corner_circle"
        android:textStyle="normal"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_answer_b"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_question"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.1"
        android:background="@drawable/bg_corner_circle"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_answer_c"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_answer_a"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.1"
        android:background="@drawable/bg_corner_circle"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_answer_d"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_answer_a"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.1"
        android:background="@drawable/bg_corner_circle"
        android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>
